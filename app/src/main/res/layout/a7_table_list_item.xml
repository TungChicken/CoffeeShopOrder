<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/a7_tablelist_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/a7_table_free"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a7_tablelist_item_tablename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table 01"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/a7_tablelist_item_icon"
        app:layout_constraintStart_toStartOf="@+id/a7_tablelist_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/a7_tablelist_item_icon" />

    <TextView
        android:id="@+id/a7_tablelist_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free"
        android:textColor="@color/primaryTextColor"
        android:textAlignment="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/a7_tablelist_item_icon"
        app:layout_constraintStart_toStartOf="@+id/a7_tablelist_item_icon"
        app:layout_constraintTop_toBottomOf="@+id/a7_tablelist_item_tablename" />

</androidx.constraintlayout.widget.ConstraintLayout>